            //    "Name": "ConnString2",
            //    "Type": "SQLAzure"
            //  }
            //],
            "defaultDocuments": [
              "index.html",
              "hostingstart.html",
              "login.xhtml"
            ]
          }
        },
        {
          "apiVersion": "2015-08-01",
          "name": "connectionstrings",
          "type": "config",
          "dependsOn": [
            "[resourceId('Microsoft.Web/Sites', parameters('TracDatAppName'))]"
          ],
          "properties": {
            "ConnString1": {
              "value": "jdbc:sqlserver://tracdatsqlprod.database.windows.net:1433;database=demo;user=tracdat@tracdatsql;password={your_password_here};encrypt=true;trustServerCertificate=false;hostNameInCertificate=*.database.windows.net;loginTimeout=30;",
